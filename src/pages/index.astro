 * Landing Page
 * - Pokazuje AuthPanel dla niezalogowanych użytkowników
 * - Przekierowuje zalogowanych użytkowników na /generate
 */

import Welcome from "../components/Welcome.astro";
import Layout from "../layouts/Layout.astro";
