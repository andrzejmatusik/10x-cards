---
/**
 * Forgot Password Page
 * Dedykowana strona dla procesu odzyskiwania hasła
 *
 * Funkcjonalność:
 * - Wyświetla AuthPanel w trybie 'forgot-password'
 * - Przekierowuje zalogowanych użytkowników na /generate
 */

import Layout from '@/layouts/Layout.astro';
import { AuthPanel } from '@/components/auth/AuthPanel';
import { isUserAuthenticated } from '@/lib/auth/server-auth';

// Jeśli już zalogowany, przekieruj do /generate
if (await isUserAuthenticated(Astro)) {
  return Astro.redirect('/generate');
}
---

<Layout title="Przypomnij hasło - 10x-cards">
  <div class="min-h-screen flex items-center justify-center p-4">
    <div class="w-full max-w-md">
      <div class="text-center mb-8">
        <h1 class="text-4xl font-bold mb-2">Zapomniałeś hasła?</h1>
        <p class="text-muted-foreground">
          Wyślemy Ci link do resetowania hasła na adres email
        </p>
      </div>

      <AuthPanel mode="forgot-password" client:load />
    </div>
  </div>
</Layout>
